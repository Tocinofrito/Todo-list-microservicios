<html>
<head> 
<title> ToDo App </title>
<link href="https://fonts.googleapis.com/css?family=Lato:100" rel="stylesheet">
<link href="/styles.css" rel="stylesheet">
</head>

<body>
<div class="container">
<h2> A Simple ToDo List App </h2>

<form action="/addtask" method="POST">
    <input type="text" name="newtask" placeholder="add new task">
    <button> Add Task </button>

    <h2> Added Tasks </h2>
    <ul>
        <% if (tasks && tasks.tasks && tasks.tasks.todo && tasks.tasks.todo.length > 0) { %>
            <% for (var i = 0; i < tasks.tasks.todo.length; i++) { %>
                <li>
                    <input type="checkbox" name="check" value="<%= tasks.tasks.todo[i] %>" /> <%= tasks.tasks.todo[i] %>
                </li>
            <% } %>
        <% } %>
    </ul>

    <button formaction="/removetask" type="submit" id="top"> Remove </button>
</form>

<h2> Completed Tasks </h2>
<ul>
    <% if (tasks && tasks.tasks && tasks.tasks.completed && tasks.tasks.completed.length > 0) { %>
        <% for (var i = 0; i < tasks.tasks.completed.length; i++) { %>
            <li>
                <input type="checkbox" checked disabled> <%= tasks.tasks.completed[i] %>
            </li>
        <% } %>
    <% } %>
</ul>

</div>

</body>
</html>
